{
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "build:esbuild": "node esbuild.config.js",
    "start": "node dist/src/index.js",
    "start:esbuild": "node dist/index.js",
    "lint": "eslint . --ext .js,.mjs",
    "test": "NODE_ENV=test tsc --noEmit --project tsconfig.test.json && jest",
    "test:unit": "NODE_ENV=test jest tests/unit",
    "test:integration": "NODE_ENV=test jest tests/integration",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:ci": "NODE_ENV=test jest --ci --coverage --watchAll=false",
    "docker:build": "docker build -t auth-api .",
    "docker:run": "docker run -p 3000:3000 --env-file .env auth-api",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev:bg": "docker-compose -f docker-compose.dev.yml up -d --build",
    "docker:dev:stop": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f app",
    "docker:prod": "docker-compose up --build",
    "docker:prod:bg": "docker-compose up -d --build",
    "docker:prod:stop": "docker-compose down",
    "docker:prod:logs": "docker-compose logs -f app",
    "docker:clean": "docker system prune -f",
    "docker:clean:all": "docker system prune -af && docker volume prune -f",
    "docker:shell": "docker-compose exec app sh",
    "docker:restart": "docker-compose restart app"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.0",
    "nodemailer": "^7.0.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.24",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "esbuild": "^0.25.5",
    "eslint": "^9.5.0",
    "jest": "^29.7.0",
    "node-mocks-http": "^1.17.2",
    "nodemon": "^3.1.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
